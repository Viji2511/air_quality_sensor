#define MQ135_ANALOG_PIN A0  // Analog output pin
#define MQ135_DIGITAL_PIN 35  // Digital output pin

void setup() {
    Serial.begin(9600);  // Initialize serial communication
    pinMode(MQ135_DIGITAL_PIN, INPUT); // Set digital pin as input
}

void loop() {
    int airQualityValue = analogRead(MQ135_ANALOG_PIN);  // Read analog value
    int gasDetected = digitalRead(MQ135_DIGITAL_PIN); // Read digital output

    Serial.print("Analog Value: ");
    Serial.print(airQualityValue);
    
    if (gasDetected == LOW) {
        Serial.println(" - High Pollution Detected!");
    } else {
        Serial.println(" - Air Quality Normal.");
    }

    delay(1000); // Wait for a second before next reading
}
