#define MQ2_ANALOG_PIN A0  // Analog output pin
#define MQ2_DIGITAL_PIN 2  // Digital output pin

void setup() {
    Serial.begin(9600);   // Initialize serial communication
    pinMode(MQ2_DIGITAL_PIN, INPUT); // Set digital pin as input
}

void loop() {
    int gasValue = analogRead(MQ2_ANALOG_PIN);  // Read analog value
    int gasDetected = digitalRead(MQ2_DIGITAL_PIN); // Read digital value

    Serial.print("Analog Value: ");
    Serial.print(gasValue);
    
    if (gasDetected == LOW) {
        Serial.println(" - Gas Detected!");
    } else {
        Serial.println(" - No Gas Detected.");
    }

    delay(1000); // Wait for a second before next reading
}
