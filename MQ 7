#define MQ7_ANALOG_PIN 34  // Use any ADC-capable GPIO pin
#define MQ7_DIGITAL_PIN 25  // Use any digital GPIO pin

void setup() {
    Serial.begin(115200);  // Set baud rate for ESP32
    pinMode(MQ7_DIGITAL_PIN, INPUT); // Digital pin input
}

void loop() {
    int gasValue = analogRead(MQ7_ANALOG_PIN);  // Read analog sensor value
    int gasDetected = digitalRead(MQ7_DIGITAL_PIN);  // Read digital output

    Serial.print("Analog Value: ");
    Serial.print(gasValue);

    if (gasDetected == LOW) {
        Serial.println(" - High CO Levels Detected!");
    } else {
        Serial.println(" - CO Levels Normal.");
    }

    delay(1000);  // Wait 1 second before next reading
}

